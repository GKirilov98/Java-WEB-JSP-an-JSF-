<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">
    <url-mapping id="index">
        <pattern value="/index" />
        <view-id value="/faces/view/index.xhtml" />
    </url-mapping>

    <url-mapping id="register">
        <pattern value="/users/register" />
        <view-id value="/faces/view/register.xhtml" />
    </url-mapping>

    <url-mapping id="login">
        <pattern value="/users/login" />
        <view-id value="/faces/view/login.xhtml" />
    </url-mapping>

    <url-mapping id="home">
        <pattern value="/home" />
        <view-id value="/faces/view/home.xhtml" />
    </url-mapping>

    <url-mapping id="hero-create">
        <pattern value="/heroes/create" />
        <view-id value="/faces/view/hero-create.xhtml" />
    </url-mapping>

    <url-mapping id="hero-details">
        <pattern value="/heroes/details/#{id}" />
        <view-id value="/faces/view/hero-details.xhtml" />
    </url-mapping>

    <url-mapping id="hero-delete">
        <pattern value="/heroes/delete/#{id}" />
        <view-id value="/faces/view/hero-delete.xhtml" />
    </url-mapping>

</pretty-config>